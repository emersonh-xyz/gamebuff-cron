generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Summoner {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  summonerId    String
  accountId     String
  profileIconId Int
  puuid         String
  name          String
  summonerLevel Int
  gameName      String
  tagLine       String
  recentMatchId String
}

model PendingMatch {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  puuid     String
  matchId   String
}
